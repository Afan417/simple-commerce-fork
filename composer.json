{
    "name": "doublethreedigital/simple-commerce",
    "description": "A Statamic 3 addon boilerplate, ready for testing.",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "DoubleThreeDigital\\SimpleCommerce\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoubleThreeDigital\\SimpleCommerce\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Addon Boilerplate",
            "description": "A Statamic 3 addon boilerplate, ready for testing."
        },
        "laravel": {
            "providers": [
                "DoubleThreeDigital\\SimpleCommerce\\ServiceProvider"
            ]
        }
    },
    "require": {
        "barryvdh/laravel-dompdf": "^0.8.0@dev",
        "calebporzio/sushi": "dev-master",
        "moneyphp/money": "^3.0@dev",
        "statamic/cms": "^3.0@beta",
        "stripe/stripe-php": "^7.7"
    },
    "require-dev": {
        "aerni/statamic-factory": "dev-master",
        "nunomaduro/collision": "^4.2",
        "orchestra/testbench": "^5.0",
        "spatie/test-time": "dev-master"
    },
    "minimum-stability": "dev",
    "scripts": {
        "lint": [
            "php-cs-fixer fix ./src"
        ],
        "test": [
            "./vendor/bin/phpunit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
