{
    "name": "doublethreedigital/simple-commerce",
    "type": "statamic-addon",
    "description": "A perfectly simple e-commerce solution for Statamic",
    "authors": [
        {
            "name": "Duncan McClean",
            "email": "duncan@doublethree.digital",
            "homepage": "http://duncanm.dev",
            "role": "Founder of Double Three Digital"
        }
    ],
    "autoload": {
        "psr-4": {
            "DoubleThreeDigital\\SimpleCommerce\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoubleThreeDigital\\SimpleCommerce\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Commerce",
            "description": "A perfectly simple e-commerce solution for Statamic"
        },
        "laravel": {
            "providers": [
                "DoubleThreeDigital\\SimpleCommerce\\ServiceProvider"
            ]
        }
    },
    "require": {
        "stripe/stripe-php": "^7.7",
        "statamic/cms": "dev-master",
        "moneyphp/money": "^3.0@dev",
        "doctrine/dbal": "2.10.x-dev"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0"
    },
    "minimum-stability": "dev",
    "scripts": {
        "lint": [
            "php-cs-fixer fix ./src"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
