{
    "name": "damcclean/commerce",
    "type": "statamic-addon",
    "description": "Powerful e-commerce addon for Statamic",
    "authors": [
        {
            "name": "Duncan McClean",
            "email": "duncan@doublethree.digital",
            "homepage": "http://duncanm.dev",
            "role": "Founder of Double Three Digital"
        }
    ],
    "autoload": {
        "psr-4": {
            "Damcclean\\Commerce\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Damcclean\\Commerce\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Commerce",
            "description": "Powerful e-commerce addon for Statamic"
        },
        "laravel": {
            "providers": [
                "Damcclean\\Commerce\\CommerceServiceProvider"
            ]
        }
    },
    "require": {
        "stripe/stripe-php": "^7.7",
        "statamic/cms": "3.0.*@beta",
        "moneyphp/money": "^3.0@dev",
        "doctrine/dbal": "2.10.x-dev"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0"
    },
    "minimum-stability": "dev",
    "scripts": {
        "lint": [
            "php-cs-fixer fix ./src"
        ]
    }
}
